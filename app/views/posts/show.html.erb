<div class="container">
<div class="jumbotron">
<h1><%= @post.title %></h1>

<h3>Description</h3>
  <p>
    <%= @post.description %>
  </p>
<h3>Link</h3>
  <p>
    <a href="<%= @post.url %>"><%= @post.url %></a>
  </p>

<h3>Tags</h3>
  <% @post.tags.each do |tag| %>
  <p><%= link_to "#{tag.name}", tag_path(tag) %></p>
  <% end %>

<%= render 'tags/new_tag_form' %>
</div>
</div>
