  <div class="row row-offcanvas row-offcanvas-right">
  <h1> List of Resources </h1>
    <% @tags.each do |tag| %>
     <div class="card">
      <h2><%= tag.name %></h2>  
      <ul>       
      <% tag.posts.each do |post| %>
        <tr>
          <li><td><%= link_to "#{post.title}", post_path(post) %></td></li>
        </tr>
      <% end %>
      </ul>
     </div>
  </div>
    <% end %>
</div>





